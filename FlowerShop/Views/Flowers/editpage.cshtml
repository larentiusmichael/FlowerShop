@model Flower
@{
    ViewData["Title"] = "editpage";
}

<center>
    <h1>Edit Flower Information</h1>
    <br />
    <hr />
    <br />
    <form method="post" asp-action="editflower" asp-controller="Flowers">
        <table border='1'>
            <tr>
                <th><label asp-for="FlowerID"></label></th>
                <td><input asp-for="FlowerID" readonly />
                    <span asp-validation-for="FlowerID"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="FlowerName"></label></th>
                <td>
                    <input asp-for="FlowerName" readonly />
                    <span asp-validation-for="FlowerName"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="FlowerDescription"></label></th>
                <td>
                    <input asp-for="FlowerDescription" />
                    <span asp-validation-for="FlowerDescription"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="FlowerType"></label></th>
                <td>
                    <input asp-for="FlowerType" />
                    <span asp-validation-for="FlowerType"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="FlowerPrice"></label></th>
                <td>
                    <input asp-for="FlowerPrice" />
                    <span asp-validation-for="FlowerPrice"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="DeliveryDate"></label></th>
                <td>
                    <input asp-for="DeliveryDate" />
                    <span asp-validation-for="DeliveryDate"></span>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <button class="btn-outline-info" type="submit">Update Flower Info</button></td>
            </tr>
        </table>
    </form>
</center>

